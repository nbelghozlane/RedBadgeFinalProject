@model IEnumerable<RedBadgeFinalProject.Models.GuestModels.GuestListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Guests</h2>

<p>
    @Html.ActionLink("Create New", "CreateGuest")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GuestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAttending)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Event)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAttending)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditGuest", new { id = item.GuestId }) |
                @Html.ActionLink("Details", "GuestDetails", new { id = item.GuestId }) |
                @Html.ActionLink("Delete", "DeleteGuest", new { id = item.GuestId })
            </td>
        </tr>
    }

</table>
