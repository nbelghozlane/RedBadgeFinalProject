@model IEnumerable<RedBadgeFinalProject.Models.EventModels.EventListItem>

@{
    ViewBag.Title = "Index";
}

<div class="event-header">My Events</div> 

<div class="create-new-event">
    <p>
        <a href="/Event/Create"><img src="~/Content/Assets/createicon.png" /></a>
    </p>
</div>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="event-board">
    @foreach (var item in Model)
    {
        <div class="card-container col-md-4 col-sm-6">
            <div class="panel">
                <div class="panel-heading">
                    @Html.DisplayFor(modelItem => item.EventName)
                </div>

                <div class="panel-body">
                    <p>Location: @Html.DisplayFor(modelItem => item.Location)</p>
                    <div>
                        <p>Date: @Html.DisplayFor(modelItem => item.EventDateTime)</p>
                    </div>
                    <div>
                        <p># Of Guests Invited: @Html.DisplayFor(modelItem => item.GuestsInvitedCount)</p>
                    </div>

                    <div class="event-options">
                        <a href="Event/Details/@item.EventId">Details | </a>
                        <a href="/Event/Edit/@item.EventId">Edit | </a>
                        @Html.ActionLink("Delete", "Delete", new { id = item.EventId })
                    </div>
                </div>
            </div>
        </div>
    }

</div>


