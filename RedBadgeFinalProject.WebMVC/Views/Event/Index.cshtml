@model IEnumerable<RedBadgeFinalProject.Models.EventModels.EventListItem>

@{
    ViewBag.Title = "Index";
}

<div class="event-header"><h2>My Events</h2></div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="event-board">
    @foreach (var item in Model)
    {
        <div class="card-container col-md-4 col-sm-6">
            <div class="panel">
                <div class="panel-heading">
                    @Html.ActionLink(item.EventName, "Details")
                </div>
                <div class="panel-body">
                    @Html.DisplayFor(modelItem => item.EventType)
                    <div>
                        @Html.DisplayFor(modelItem => item.EventDateTime)
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDateTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EventId })
            </td>
        </tr>
    }

</table>
