@model RedBadgeFinalProject.Models.EventModels.EventDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Event</h2>

<div class="alert alert-danger fade in" role="alert">
    Are you sure you want to delete this event? <br /> *Please make sure there are no existing guests/expenses for this event before deleting it.*
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    <br>
</div>

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.EventId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EventName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EventType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EventDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventDateTime)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="details-delete-options">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to Events", "Index")
            </div>
        </div>
    }
</div>


